<% if error_msg(controller).errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(error_msg(controller).errors.count, "error") %>.
    </div>
    <ul>
    <% error_msg(controller).errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>