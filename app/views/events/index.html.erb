<% provide(:title, '') %>
<div class="row navbar-admin">
  <h1>Все мероприятия</h1>
  <span class="ml-auto">
    <%= link_to '/events/new', title: 'Добавить мероприятие' do %>
              <%= material_icon.add.md_36 %>
    <% end %>
  </span>
</div>
<div class="events-container">
  <div class="row">
    <% @events.each do |event| %>
      <%= render event %>
    <% end %>
  </div>
</div>
<%= will_paginate @events, list_classes: %w(pagination justify-content-center) %>

