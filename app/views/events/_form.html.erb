<%= form_for @event, html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages', object: @event %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  
  <%= f.label :region %>
  <%= f.text_field :region, class: 'form-control' %>

  <%= f.label :city %>
  <%= f.text_field :region, class: 'form-control' %>

  <%= f.label :address %>
  <%= f.text_field :address, class: 'form-control' %>

  <%= f.label :date %>
  <%= f.datetime_select :date, class: 'form-control' %>

  <%= f.label :organizer %>
  <%= f.collection_select :organizer_id, Organizer.all, :id, :name, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>

  <%= f.label :link %>
  <%= f.text_field :link, class: 'form-control' %>

  <!-- <%= f.file_field :image %> !-->
  
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>